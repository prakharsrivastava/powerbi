// Step 2: Define the UDF to add quotes
def addQuotes(input: String): String = {
  input.replaceAll("""(\w+)\s*:\s*""", "\"$1\":\"").replaceAll("""\s*,\s*""", "\",\"").replaceAll("""\}\s*,\s*\{""", "\"},{\"").replaceAll("""(\w+)\s*\}""", "$1\"}")
}

val addQuotesUDF = udf(addQuotes _)

// Step 3: Apply the UDF to the DataFrame column
val resultDF = df.withColumn("jsonWithQuotes", addQuotesUDF(col("jsonString")))
